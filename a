      const data = {};
      formData.forEach((value, key) => data[key] = value);

      await fetch("YOUR_SCRIPT_URL_HERE", {
        method: "POST",
        mode: "no-cors",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data)
